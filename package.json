{
    "name": "power-bag-backend",
    "version": "1.0.0",
    "description": "API for manager garment bags",
    "main": "src/app.js",
    "private": true,
    "scripts": {
        "test": "yarn test:coverage",
        "test:unit": "mocha --recursive src/tests/**/**/*.test.js",
        "test:coverage": "nyc --reporter=text --reporter=html --all mocha --recursive src/tests/**/**/*.test.js",
        "dev": "yarn db:migrate && nodemon --inspect=0.0.0.0 src/server.js",
        "db:migrate": "npx sequelize-cli db:migrate",
        "db:create": "npx sequelize-cli db:create power-bag",
        "start": "npm run db:migrate && node src/server.js",
        "eslint:fix": "npx eslint src/**/*.js --fix  --quiet",
        "postinstall": "husky install",
        "prepare": "husky install"
    },
    "author": "Power Rangers Squad",
    "license": "ISC",
    "devDependencies": {
        "chai": "^4.3.4",
        "eslint": "^7.25.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^5.2.0",
        "mocha": "^8.3.2",
        "nodemon": "^2.0.7",
        "nyc": "^15.1.0",
        "pinst": "^2.1.6",
        "sequelize-cli": "^6.2.0",
        "sinon": "^10.0.0"
    },
    "dependencies": {
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "chance": "^1.1.7",
        "cors": "^2.8.5",
        "date-fns": "^2.22.1",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.6",
        "express": "^4.17.1",
        "handlebars": "^4.7.7",
        "joi": "^17.4.0",
        "jsonwebtoken": "^8.5.1",
        "node-cron": "^3.0.0",
        "nodemailer": "^6.5.0",
        "pg": "^8.5.1",
        "pg-hstore": "^2.3.3",
        "prettier": "^2.2.1",
        "puppeteer": "^9.1.1",
        "sequelize": "^6.6.2",
        "sequelize-cli": "^6.2.0",
        "uuid": "^8.3.2"
    },
    "nyc": {
        "check-coverage": true,
        "lines": 100,
        "statements": 100,
        "functions": 100,
        "branches": 100,
        "include": [
            "**/useCases/**/*.js"
        ],
        "exlude": [
            "test/**/*",
            "coverage/**/*"
        ]
    }
    
}
